exec hypridle &
exec wlsunset -t 4500 -T 5000 -l 21.028511 -L 105.804817

include ~/.config/sway/keymap
include ~/.config/sway/bar

font pango:Inter 10
output * bg ~/Pictures/wallpapers/flowers.jpg fill


# Touchpad & mouse config
input * {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}
# keyboard config
input "type:keyboard" {
    xkb_options "caps:swapescape"
    repeat_rate 30
    repeat_delay 300
}

default_border none
gaps inner 1
gaps outer 1


include /etc/sway/config.d/*
